<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:padding="5dp"
    android:gravity="center_vertical|center_horizontal"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/customborder"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0sp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="17dp"
                    android:textColor="#333"
                    android:fontFamily="@font/proza_libre"
                    android:id="@+id/txt_subject"
                    android:textStyle="bold"
                    android:text="Subject"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#333"
                    android:textSize="15dp"
                    android:text="Sample"
                    android:id="@+id/txt_title"
                    android:layout_height="wrap_content" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="0sp"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="3dp"
                    android:background="#75EB8B"
                    android:id="@+id/hmeBg"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="14dp"
                        android:textColor="#000"
                        android:fontFamily="sans-serif"
                        android:id="@+id/txt_duedate"
                        android:text="0"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#333"
                        android:textSize="10dp"
                        android:text="Due Date"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="13dp"
                android:textStyle="italic"
                android:id="@+id/txt_homeBody"
                android:text="Sample homework body of work"
                android:textColor="#333"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="right"
            android:padding="10dp"
            android:background="#ffffff"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#333"
                    android:text="KK3"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:id="@+id/hme_className"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#a1a1a1"
                    android:text="Class"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#333"
                    android:text="2"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:id="@+id/hme_classSize"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#a1a1a1"
                    android:text="Class Size"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#333"
                    android:text="0"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:id="@+id/hme_no_submittd"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#a1a1a1"
                    android:text="Submitted"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>