<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@drawable/customborder"
    android:padding="13dp"
    android:gravity="center_vertical|center_horizontal"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="40sp"
        android:gravity="center_horizontal|center_vertical"
        android:id="@+id/llCircle"
        android:background="@drawable/circle_shape_grey"
        android:layout_height="40sp">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:text="$"
            android:id="@+id/txtLetter"
            android:textSize="20sp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0sp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#333"
            android:textSize="14dp"
            android:fontFamily="@font/proza_libre"
            android:text="Transaction Desc"
            android:id="@+id/txt_tran_Desc"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="13dp"
            android:textColor="#ccc"
            android:id="@+id/txt_tran_type"
            android:text="Transaction Type"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="0sp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_tran_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#333"
            android:fontFamily="@font/montserrat"
            android:textSize="14dp"></TextView>

    </LinearLayout>
</LinearLayout>