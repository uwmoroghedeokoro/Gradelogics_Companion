<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".activity_homework_submit">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"

        android:elevation="4dp"
        app:title="Submit Homework"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="0dp"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_home_title"
                    android:textStyle="normal"
                    android:fontFamily="@font/proza_libre"
                    android:textSize="25dp"
                    android:text="Homework Title"
                    android:textColor="#54BE91"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:background="#ddd"
            android:layout_marginBottom="10dp"
            android:layout_height="1dp"></View>


        <EditText
            android:layout_width="match_parent"
            android:textColor="#333"
            android:id="@+id/home_commet"
            android:inputType="textMultiLine"
            android:lines="5"
            android:hint="Your Comments"
            android:textColorHint="#ccc"
            android:padding="5dp"
            android:gravity="top|left"
            android:background="@drawable/customborder"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="15dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/customborder"
            android:gravity="left"
            android:padding="5dp"
            android:id="@+id/attach1"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="70dp"
                android:background="#1cd453"
                android:id="@+id/txt_ll_add1"
                android:gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_file_add1"
                    android:text="ADD"
                    android:textColor="#FFF"
                    android:textSize="16dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txt_file_title1"
                android:text="Attachment"
                android:textColor="#54BE91"
                android:textSize="16dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/edittextbackground"
            android:gravity="left"
            android:padding="5dp"
            android:id="@+id/attach2"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="70dp"
                android:background="#1cd453"
                android:id="@+id/txt_ll_add2"
                android:gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_file_add2"
                    android:text="ADD"
                    android:textColor="#FFF"
                    android:textSize="16dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:text="Attachment"
                android:id="@+id/txt_file_title2"
                android:textColor="#54BE91"
                android:textSize="16dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/customborder"
            android:gravity="left"
            android:padding="5dp"
            android:id="@+id/attach3"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="70dp"
                android:background="#1cd453"
                android:id="@+id/txt_ll_add3"
                android:gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_file_add3"
                    android:text="ADD"
                    android:textColor="#FFF"
                    android:textSize="16dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:text="Attachment"
                android:textColor="#54BE91"
                android:id="@+id/txt_file_title3"
                android:textSize="16dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/customborder"
            android:gravity="left"
            android:padding="5dp"
            android:id="@+id/attach4"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="70dp"
                android:background="#1cd453"
                android:id="@+id/txt_ll_add4"
                android:gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_file_add4"
                    android:text="ADD"
                    android:textColor="#FFF"
                    android:textSize="16dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:text="Attachment"
                android:id="@+id/txt_file_title4"
                android:textColor="#54BE91"
                android:textSize="16dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/customborder"
            android:gravity="left"
            android:padding="5dp"
            android:id="@+id/attach5"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="70dp"
                android:background="#1cd453"
                android:id="@+id/txt_ll_add5"
                android:gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_file_add5"
                    android:text="ADD"
                    android:textColor="#FFF"
                    android:textSize="16dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:text="Attachment"
                android:id="@+id/txt_file_title5"
                android:textColor="#54BE91"
                android:textSize="16dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="0dp"
            android:layout_height="wrap_content">
            <ProgressBar
                android:id="@+id/prgBar"
                android:visibility="gone"
                style="@style/CustomProgressBarHorizontal"
                android:max="100"
                android:layout_width="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#54BE91"
            android:padding="10dp"
            android:id="@+id/btn_submit"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:fontFamily="@font/proza_libre"
                android:text="Hand In"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>