<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fff"
    android:padding="0dp"

    android:gravity="center_vertical|center_horizontal"
    android:layout_height="wrap_content">
   <LinearLayout
       android:layout_width="match_parent"
       android:background="@drawable/customborder"
       android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="40sp"
        android:gravity="center_horizontal|center_vertical"
        android:id="@+id/llCircle"
        android:background="@drawable/subject_ico"
        android:layout_height="40sp">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:text="S"
            android:visibility="gone"
            android:id="@+id/txtLetter"
            android:textSize="20sp"
            android:layout_height="wrap_content" />
    </LinearLayout>
   <LinearLayout
       android:layout_width="0sp"
       android:layout_weight="3"
       android:orientation="vertical"
       android:layout_marginLeft="10dp"
       android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:textColor="#333"
           android:textSize="18dp"
           android:text="SubjectName"
           android:id="@+id/txt_subjectName"
           android:layout_height="wrap_content" />
       <TextView
           android:layout_width="wrap_content"
           android:textSize="12dp"
           android:textColor="#ccc"
           android:id="@+id/txt_teacherName"
           android:text="Teacher Name"
           android:layout_height="wrap_content" />

   </LinearLayout>
    <LinearLayout
        android:layout_width="0sp"
        android:layout_weight="1"
        android:padding="5dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#fff"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="22dp"
            android:textColor="#333"
            android:id="@+id/txt_termAvg"
            android:fontFamily="@font/montserrat"
            android:text="0"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="Term Avg"
            android:textSize="10dp"
            android:id="@+id/general_lbl"
            android:textColor="#333"
            android:layout_height="wrap_content" />
    </LinearLayout>
   </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#F6F6F6"
        android:layout_height="1dp"></View>
</LinearLayout>